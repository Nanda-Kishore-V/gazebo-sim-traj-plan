<?xml version="1.0"?>

<robot name="camera" xmlns:xacro="http://www.ros.org/wiki/xacro">

<link name="world"/>

<property name="DEG_TO_RAD" value="0.017453293" />

<xacro:include filename="$(find robot_description)/urdf/sensors/xtion_pro_live.urdf.xacro"/>

<xacro:xtion_pro_live name="rgbd_camera" parent="world">
  <origin xyz="0 0 2" rpy="0 ${75.0 * DEG_TO_RAD} 0"/>
  <origin xyz="0 0 0" rpy="${-90.0 * DEG_TO_RAD} 0 ${-90.0 * DEG_TO_RAD}"/>
</xacro:xtion_pro_live>

</robot>
